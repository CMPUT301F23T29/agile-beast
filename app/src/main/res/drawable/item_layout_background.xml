<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#5F8A8B">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="8dp"/>
                    <solid android:color="#E0E0E0"/>
                    <stroke android:color="#E0E0E0" android:width="1dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid
                        android:color="@color/itemLayoutBackground" >
                    </solid>

                    <stroke
                        android:width="2dp"
                        android:color="@color/itemLayoutBackground" >
                    </stroke>

                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"    >
                    </padding>

                    <corners
                        android:radius="11dp"   >
                    </corners>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
