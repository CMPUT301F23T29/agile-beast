<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="750sp"
    android:layout_height="match_parent"
    android:id="@+id/fragment_main_menu"
    android:background="@color/menu_page"
    android:orientation = "vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuFragment">


    <TextView
        android:id ="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="28sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="23sp"
        android:textColor="@color/menu_page_text"
        android:paddingBottom = "60sp"
        />

    <TextView
        android:id ="@+id/select_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textColor = "@color/white"
        android:layout_marginLeft="23sp"

        />

    <TextView
        android:id ="@+id/add_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textColor = "@color/white"
        android:layout_marginLeft="23sp"
        />

    <TextView
        android:id ="@+id/edit_tag_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tag"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textColor = "@color/white"
        android:layout_marginLeft="23sp"
        />


</LinearLayout>